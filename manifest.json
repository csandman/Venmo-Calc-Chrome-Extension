{
  "name": "Venmo Stat Calculator",
  "version": "1.0",
  "description": "Collect stats from your venmo profile page and do some maths on them!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/venmo_logo16.png",
      "32": "images/venmo_logo32.png",
      "48": "images/venmo_logo48.png",
      "128": "images/venmo_logo128.png"
    }
  },
  "icons": {
    "16": "images/venmo_logo16.png",
    "32": "images/venmo_logo32.png",
    "48": "images/venmo_logo48.png",
    "128": "images/venmo_logo128.png"
  },
  "manifest_version": 2
}
